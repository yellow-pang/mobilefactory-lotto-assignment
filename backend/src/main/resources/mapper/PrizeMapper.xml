<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.otr.lotto.mapper.PrizeMapper">

  <select id="findByEventAndParticipantId" resultType="com.otr.lotto.domain.Prize">
    SELECT
      id,
      event_id,
      participant_id,
      rank,
      created_at
    FROM prize
    WHERE event_id = #{eventId}
      AND participant_id = #{participantId}
  </select>

</mapper>
